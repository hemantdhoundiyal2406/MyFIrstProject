<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>

    <%- include('partials/header.ejs') %>

    <div class="">
        <div class="position-relative">
            <img src="https://cdn.pixabay.com/photo/2024/12/13/20/34/mountains-9266137_1280.jpg" class="img-fluid w-100 object-fit-cover" alt="" style="height: 400px;">

            <h1 class="fw-bold text-white position-absolute top-50 start-50 destination-text  text-uppercase translate-middle"
    >
  Destinations
</h1>

        </div>
    </div>


    <section class="container my-5">
        <div class="row row-gap-4">
      <% destinationsdata.forEach(item => { %>
            <div class="col-md-4 col-6 ">
            <div class="position-relative img-zoom-container h-100 w-100"  >
              <a href="/destinations/<%= item.slug %>" class="text-decoration-none text-dark">
                <img src="/uploads/<%= item.Destinationsimage %>" class="img-fluid rounded h-100 w-100" alt="">
                <h5 class="position-absolute bottom-0 start-0 text-white mb-3 ms-3">
                  <%= item.Destinationstitle %>
                </h5>
              </a>
            </div>
          </div>
      <% }) %>
         
         
      
        </div>

    </section>


      <%- include('partials/footer.ejs') %>
    
</body>
</html>